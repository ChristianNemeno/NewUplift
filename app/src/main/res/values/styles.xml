<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="active_indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/color_active_indicator</item>
        <item name="android:fontFamily">@font/robotoserif_bold</item>
    </style>

    <style name="CircularImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MyToolbarTextAppearance" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/robotoserif_bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>

        <!-- Add these for better Material 3 compatibility -->
        <item name="fontFamily">@font/robotoserif_bold</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="GeneralButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/general_button</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item> <!-- Optional: adjust size -->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="QuoteCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginVertical">4dp</item>
    </style>
</resources>