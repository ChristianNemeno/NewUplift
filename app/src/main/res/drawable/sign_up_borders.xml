<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fill with 88% opacity white -->
    <solid android:color="@color/signup_bg" /> <!-- #E0 = 88% opacity of white -->

    <!-- 10dp corner radius on all corners -->
    <corners android:radius="10dp" />

    <!-- 2dp inner stroke with 88% opacity black -->
    <stroke
        android:width="1dp"
        android:color="@color/header_text" /> <!-- #E0 = 88% opacity of black -->

    <!-- Padding to ensure stroke appears inside -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp" />

</shape>