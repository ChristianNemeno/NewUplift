<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_bg_color"
    tools:context=".fragments.SettingsFragment">

    <!-- Back button and title -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/arrow_back"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Settings list container -->
    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/robotoserif_bold"
        android:text="Settings"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/settingsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="46dp"
        android:orientation="vertical"
        android:background="@drawable/settings_full_rounded_corners"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settingsTitle">

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/profileSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:paddingEnd="32dp"
            android:paddingStart="30dp"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/settings_profile_icon"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/robotoserif_medium"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/settings_arrow_forward_ios_24"
                app:tint="@color/black" />
        </LinearLayout>

        <!-- My quotes -->
        <LinearLayout
            android:id="@+id/quotesSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:paddingEnd="32dp"
            android:paddingStart="30dp"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/settings_myquotes_icon"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="My quotes"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/robotoserif_medium"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/settings_arrow_forward_ios_24"
                app:tint="@color/black" />
        </LinearLayout>

        <!-- Favorites -->
        <LinearLayout
            android:id="@+id/favoritesSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:paddingEnd="32dp"
            android:paddingStart="30dp"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/settings_favorite_icon"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Favorites"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/robotoserif_medium"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/settings_arrow_forward_ios_24"
                app:tint="@color/black"/>
        </LinearLayout>

        <!-- Appearance -->
        <LinearLayout
            android:id="@+id/appearanceSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:paddingEnd="32dp"
            android:paddingStart="30dp"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/settings_appearance_icon"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Appearance"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/robotoserif_medium"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/settings_arrow_forward_ios_24"
                app:tint="@color/black"/>
        </LinearLayout>



        <!-- About the developers -->
        <LinearLayout
            android:id="@+id/aboutSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:paddingEnd="32dp"
            android:paddingStart="30dp"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/settings_developers_icon"
                app:tint="#089F93"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="About the developers"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/robotoserif_medium"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/settings_arrow_forward_ios_24"
                app:tint="@color/black"/>
        </LinearLayout>

        <!-- Log out -->
        <LinearLayout
            android:id="@+id/logoutSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:paddingEnd="32dp"
            android:paddingStart="30dp"
            android:layout_marginBottom="5dp"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/settings_logout_icon"
                app:tint="#089F93"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Log out"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/robotoserif_medium"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/settings_arrow_forward_ios_24"
                app:tint="@color/black"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>